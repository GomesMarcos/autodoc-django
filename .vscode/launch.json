    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py"
        },
        // Debug autodoc command
        {
            "name": "Autodoc Flow",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "autodoc_flow",
                "app",
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py"
        },
        {
            "name": "Autodoc Sequence",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "autodoc_sequence",
                "app",
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py"
        },
    ]
}